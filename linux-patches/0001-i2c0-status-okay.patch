From 4e5ba0442b5e10fbf3f6352ef7ae0a1bcac096ee Mon Sep 17 00:00:00 2001
From: kchhero <kchhero@gmail.com>
Date: Thu, 14 Aug 2025 01:58:09 +0900
Subject: [PATCH] i2c0 status okay and i2c0_pins setup for SDA, SCL

---
 arch/arm/boot/dts/am335x-boneblack-hdmi.dtsi | 42 ++++++++++++--------
 1 file changed, 26 insertions(+), 16 deletions(-)

diff --git a/arch/arm/boot/dts/am335x-boneblack-hdmi.dtsi b/arch/arm/boot/dts/am335x-boneblack-hdmi.dtsi
index 0870fce54f94..0c84b39defbd 100644
--- a/arch/arm/boot/dts/am335x-boneblack-hdmi.dtsi
+++ b/arch/arm/boot/dts/am335x-boneblack-hdmi.dtsi
@@ -7,6 +7,13 @@
 #include <dt-bindings/interrupt-controller/irq.h>
 
 &am33xx_pinmux {
+	i2c0_pins: i2c0-pins {
+		pinctrl-single,pins = <
+			AM33XX_IOPAD(0x988, PIN_INPUT_PULLUP | MUX_MODE0)    /* i2c0_sda.i2c0_sda */
+			AM33XX_IOPAD(0x98c, PIN_INPUT_PULLUP | MUX_MODE0)    /* i2c0_scl.i2c0_scl */
+		>;
+	};
+
 	nxp_hdmi_bonelt_pins: nxp-hdmi-bonelt-pins {
 		pinctrl-single,pins = <
 			AM33XX_PADCONF(AM335X_PIN_XDMA_EVENT_INTR0, PIN_OUTPUT_PULLDOWN, MUX_MODE3)
@@ -65,28 +72,15 @@ lcdc_0: endpoint@0 {
 			remote-endpoint = <&hdmi_0>;
 		};
 	};
-
-	panel-timing {
-                clock-frequency = <51200000>;
-                hactive = <1024>;
-                vactive = <600>;
-                hfront-porch = <160>;
-                hback-porch = <140>;
-                hsync-len = <20>;
-                vfront-porch = <22>;
-                vback-porch = <21>;
-                vsync-len = <12>;
-                hsync-active = <0>;
-                vsync-active = <0>;
-                de-active = <1>;
-                pixelclk-active = <1>;
-        };
 };
 
 &i2c0 {
+	status = "okay";
+
 	tda19988: tda19988@70 {
 		compatible = "nxp,tda998x";
 		reg = <0x70>;
+		status = "okay";
 		nxp,calib-gpios = <&gpio1 25 0>;
 		interrupts-extended = <&gpio1 25 IRQ_TYPE_LEVEL_LOW>;
 
@@ -100,6 +94,22 @@ tda19988: tda19988@70 {
 		#sound-dai-cells = <0>;
 		audio-ports = <	TDA998x_I2S	0x03>;
 
+		panel-timing {
+			clock-frequency = <51200000>;
+			hactive = <1024>;
+			vactive = <600>;
+			hfront-porch = <160>;
+			hback-porch = <140>;
+			hsync-len = <20>;
+			vfront-porch = <22>;
+			vback-porch = <21>;
+			vsync-len = <12>;
+			hsync-active = <0>;
+			vsync-active = <0>;
+			de-active = <1>;
+			pixelclk-active = <1>;
+		};
+		
 		ports {
 			#address-cells = <1>;
 			#size-cells = <0>;
-- 
