+	panel-timing {
+                clock-frequency = <51200000>;
+                hactive = <1024>;
+                vactive = <600>;
+                hfront-porch = <160>;
+                hback-porch = <140>;
+                hsync-len = <20>;
+                vfront-porch = <22>;
+                vback-porch = <21>;
+                vsync-len = <12>;
+                hsync-active = <0>;
+                vsync-active = <0>;
+                de-active = <1>;
